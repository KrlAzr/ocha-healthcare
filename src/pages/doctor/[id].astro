---
import Layout from '../../layouts/Layout.astro';
import { MapPin, Building2, Calendar, Globe, Stethoscope, GraduationCap, ChevronLeft } from 'lucide-react';

// 1. FETCH DATA
export async function getStaticPaths() {
  const LIVE_DATA_URL = "https://script.google.com/macros/s/AKfycbyvEJvNE4Xi_qtp3vm0GFLjTooG3ES14hXSRlaf0vxm6voCiwKTdEDxH2sYw6mtDPqakw/exec";
  
  try {
    const response = await fetch(LIVE_DATA_URL);
    const data = await response.json();
    
    return data.map(doc => ({
      params: { 
        id: doc.name.toLowerCase().trim().replace(/[^a-z0-9]+/g, '-').replace(/^-+|-+$/g, '') 
      },
      props: { doctor: doc }
    }));
  } catch (error) {
    console.error("Error fetching doctors:", error);
    return [];
  }
}

const { doctor } = Astro.props;
const WA_NUMBER = "60166062534";
const waLink = `https://wa.me/${WA_NUMBER}?text=Hi Ocha, I would like to book an appointment with ${doctor.name}`;

// 2. HELPER: Parse Specialty (Waterfall Strategy)
const parseSpecialty = (raw) => {
    if (!raw) return { main: '', sub: '' };
    
    let parts = [raw];
    
    // Priority 1: Explicit "Subspesialis" keyword
    if (raw.match(/subspesialis/i)) {
        parts = raw.split(/,\s*subspesialis:?|\s+subspesialis:?/i);
    } 
    // Priority 2: Semicolon separator (Common: "Main; Sub")
    else if (raw.includes(';')) {
        parts = raw.split(';');
    }
    // Priority 3: Bullet point separator (Common: "Main • Sub")
    else if (raw.includes('•')) {
        parts = raw.split('•');
    }
    // Priority 4: Pipe separator
    else if (raw.includes('|')) {
        parts = raw.split('|');
    }
    
    let main = parts[0] ? parts[0].trim() : '';
    let sub = parts[1] ? parts[1].trim() : '';

    // CLEANUP: Remove trailing punctuation from Main
    main = main.replace(/[;,:.•|]+$/, '').trim(); 
    
    // CLEANUP: Remove leading punctuation from Sub (e.g. "• Adult" -> "Adult")
    sub = sub.replace(/^[;,:.•|]+\s*/, '').trim();

    return { main, sub };
};

const { main, sub } = parseSpecialty(doctor.specialty);

// 3. HELPER: Robust Credentials Finder
const findCredentials = (doc) => {
    const normalizedDoc = {};
    Object.keys(doc).forEach(key => {
        const cleanKey = key.toLowerCase().replace(/[^a-z0-9]/g, '');
        normalizedDoc[cleanKey] = doc[key];
    });

    const targetKeys = ['credentials', 'medicalbackground', 'background', 'education', 'qualifications', 'pendidikan', 'experience'];

    for (const key of targetKeys) {
        if (normalizedDoc[key] && typeof normalizedDoc[key] === 'string' && normalizedDoc[key].length > 5) {
            return normalizedDoc[key];
        }
    }
    
    // Fallback search
    for (const [key, val] of Object.entries(normalizedDoc)) {
         if (typeof val === 'string' && val.length > 50 && !key.includes('image') && !key.includes('url') && !key.includes('bio')) {
             return val;
         }
    }
    return null;
};

const rawCredentials = findCredentials(doctor);

// 4. HELPER: Format List
const formatCredentials = (text) => {
  if (!text) return [];
  let list = [];
  if (text.includes(';')) {
      list = text.split(';').map(item => item.trim()).filter(Boolean);
  } else if (text.includes('•')) {
      list = text.split('•').map(item => item.trim()).filter(Boolean);
  } else if (text.includes('\n')) {
      list = text.split('\n').map(item => item.trim()).filter(Boolean);
  } else {
      list = [text];
  }
  return list;
};

const credentialsList = formatCredentials(rawCredentials);

// Mock Schedule
const schedule = [
  { day: 'Senin', time: '09:00 - 17:00' },
  { day: 'Selasa', time: '09:00 - 17:00' },
  { day: 'Rabu', time: '09:00 - 17:00' },
  { day: 'Kamis', time: '09:00 - 17:00' },
  { day: 'Jumat', time: '09:00 - 17:00' },
  { day: 'Sabtu', time: '09:00 - 13:00' },
];
---

<Layout title={`${doctor.name} | Ocha Healthcare`}>
  <div class="bg-slate-50 min-h-screen pb-20 pt-28">
    
    {/* BREADCRUMB */}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 mb-8">
      <a href="/doctors" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-indigo-600 transition-colors">
        <ChevronLeft className="w-4 h-4 mr-1" />
        Back to Directory
      </a>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 grid lg:grid-cols-3 gap-8">
      
      {/* LEFT COLUMN: Main Profile */}
      <div class="lg:col-span-2 space-y-6">
        
        {/* 1. HEADER CARD (Improved Layout) */}
        <div class="bg-white rounded-[2rem] p-8 shadow-sm border border-slate-100 flex flex-col md:flex-row items-start gap-8">
          <div class="relative shrink-0 mx-auto md:mx-0">
             <img 
                src={doctor.image} 
                alt={doctor.name}
                class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover object-top border-4 border-slate-50 shadow-md"
                onError={(e) => { e.target.src = 'https://placehold.co/200?text=Dr'; }} 
             />
             <div class="absolute bottom-2 right-2 w-6 h-6 bg-green-500 border-4 border-white rounded-full"></div>
          </div>
          
          <div class="flex-1 text-center md:text-left">
            <div class="mb-5">
               <h1 class="font-serif text-3xl md:text-4xl font-bold text-slate-900 mb-3">{doctor.name}</h1>
               
               {/* === STACKED SPECIALTY UI === */}
               <div class="flex flex-col items-center md:items-start gap-1">
                 {/* Main Specialty: Badge Style */}
                 <span class="inline-block font-bold text-[#276CA1] uppercase tracking-widest text-xs bg-blue-50 px-3 py-1.5 rounded-lg border border-blue-100">
                    {main}
                 </span>
                 
                 {/* Sub Specialty: Clean Text */}
                 {sub && (
                   <span class="font-medium text-slate-500 text-sm leading-snug max-w-lg mt-1 block">
                     {sub}
                   </span>
                 )}
               </div>
            </div>

            <div class="space-y-2 text-slate-600 border-t border-slate-50 pt-4 mt-4">
               <div class="flex items-center justify-center md:justify-start gap-2">
                 <Building2 className="w-4 h-4 text-slate-400" />
                 <span class="text-sm font-medium">{doctor.hospital}</span>
               </div>
               <div class="flex items-center justify-center md:justify-start gap-2">
                 <MapPin className="w-4 h-4 text-slate-400" />
                 <span class="text-sm font-medium">{doctor.location || 'Malaysia'}</span>
               </div>
               {doctor.languages && (
                  <div class="flex items-center justify-center md:justify-start gap-2">
                    <Globe className="w-4 h-4 text-slate-400" />
                    <span class="text-sm font-medium">{doctor.languages.replace(/\|/g, ', ')}</span>
                  </div>
               )}
            </div>
          </div>
        </div>

        {/* 2. ABOUT SECTION */}
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
           <div class="flex items-center gap-3 mb-6">
             <div class="p-2 bg-blue-50 text-blue-600 rounded-lg">
               <Stethoscope className="w-5 h-5" />
             </div>
             <h2 class="font-serif text-xl font-bold text-slate-900">About the Specialist</h2>
           </div>
           <p class="text-slate-600 leading-relaxed font-normal">
             {doctor.name} is a highly experienced {main.toLowerCase()} practicing at {doctor.hospital}. 
             {sub ? `They specialize in ${sub.toLowerCase()} and are` : 'They are'} dedicated to providing comprehensive care for international patients.
           </p>
        </div>

        {/* 3. MEDICAL BACKGROUND & CREDENTIALS */}
        {(credentialsList.length > 0) && (
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
             <div class="flex items-center gap-3 mb-6">
               <div class="p-2 bg-indigo-50 text-indigo-600 rounded-lg">
                 <GraduationCap className="w-5 h-5" />
               </div>
               <h2 class="font-serif text-xl font-bold text-slate-900">Medical Background & Credentials</h2>
             </div>
             
             <ul class="space-y-4">
               {credentialsList.map((item, index) => {
                 const hasLabel = item.includes(':');
                 const [label, ...rest] = item.split(':');
                 const content = rest.join(':');

                 return (
                   <li key={index} class="flex items-start gap-3 text-sm text-slate-600 leading-relaxed">
                     <span class="mt-2 w-1.5 h-1.5 rounded-full bg-indigo-400 shrink-0"></span>
                     <span>
                        {hasLabel ? (
                          <>
                            <strong class="text-slate-900 block mb-1 text-base">{label}:</strong>
                            <span class="text-slate-600">{content}</span>
                          </>
                        ) : (
                          item
                        )}
                     </span>
                   </li>
                 );
               })}
             </ul>
          </div>
        )}
        
        {(!credentialsList.length) && (
            <div class="bg-yellow-50 rounded-xl p-4 border border-yellow-100 text-yellow-700 text-sm text-center">
                Detailed credentials are currently being updated for this profile.
            </div>
        )}

      </div>

      {/* RIGHT COLUMN: Action & Schedule */}
      <div class="space-y-6">
        
        {/* CTA CARD */}
        <div class="bg-white rounded-2xl p-6 shadow-lg shadow-indigo-900/5 border border-slate-100 sticky top-24">
           <h3 class="font-serif text-lg font-bold text-slate-900 mb-2">Ready to consult?</h3>
           <p class="text-slate-500 text-sm mb-6 leading-relaxed">
             Book a slot with {doctor.name} easily via our concierge service.
           </p>
           
           <a 
             href={waLink}
             target="_blank"
             class="block w-full py-3.5 bg-[#276CA1] hover:bg-[#1f5682] text-white text-center font-bold rounded-xl transition-all shadow-md hover:shadow-lg hover:-translate-y-0.5"
           >
             Book Appointment
           </a>

           <div class="mt-8">
              <div class="flex items-center gap-2 mb-4">
                 <Calendar className="w-4 h-4 text-slate-400" />
                 <span class="font-bold text-slate-900 text-sm">Clinic Schedule</span>
              </div>
              
              <div class="space-y-3">
                 {schedule.map((slot, i) => (
                   <div key={i} class="flex justify-between items-center text-sm p-3 rounded-lg bg-slate-50 border border-slate-100">
                      <span class="font-medium text-slate-700">{slot.day}</span>
                      <span class="text-slate-500 font-medium">{slot.time}</span>
                   </div>
                 ))}
              </div>
              <p class="text-xs text-slate-400 mt-4 text-center">Times are subject to change.</p>
           </div>
        </div>

      </div>

    </div>
  </div>
</Layout>