---
import Layout from '../../layouts/Layout.astro';
import { MapPin, Globe, Clock, Calendar, CheckCircle, ArrowLeft, Award, Stethoscope } from 'lucide-react';

export async function getStaticPaths() {
  const LIVE_DATA_URL = "https://script.google.com/macros/s/AKfycbyvEJvNE4Xi_qtp3vm0GFLjTooG3ES14hXSRlaf0vxm6voCiwKTdEDxH2sYw6mtDPqakw/exec";
  
  try {
    const response = await fetch(LIVE_DATA_URL);
    const rawData = await response.json();
    
    return rawData.map(doc => {
        const generatedId = doc.name ? doc.name.toLowerCase().trim().replace(/[^a-z0-9]+/g, '-').replace(/^-+|-+$/g, '') : 'unknown';
        return {
            params: { id: generatedId },
            props: { doctor: { ...doc, id: generatedId } },
        };
    });

  } catch (e) {
    console.error("Static Path Build Error:", e);
    return [];
  }
}

const { doctor } = Astro.props;
const WA_NUMBER = "60166062534"; 
const waLink = `https://wa.me/${WA_NUMBER}?text=Hi Ocha, I'd like to book an appointment with ${doctor.name}`;

// Logic to clean up data format
const languages = doctor.languages ? (Array.isArray(doctor.languages) ? doctor.languages : doctor.languages.split(',')) : ['English'];

// Handle Schedule Parsing
let schedule = [];
try {
  schedule = typeof doctor.schedule === 'string' ? JSON.parse(doctor.schedule) : doctor.schedule;
} catch (e) { 
  schedule = []; 
}
---

<Layout title={`${doctor.name} | Ocha Healthcare`}>
  <div class="pt-24 pb-20 bg-slate-50 min-h-screen">
    
    {/* BREADCRUMB */}
    <div class="max-w-6xl mx-auto px-4 mb-6">
       <a href="/#doctors" class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-[#276CA1] transition-colors">
        <ArrowLeft className="w-4 h-4 mr-2" /> Back to Directory
      </a>
    </div>

    <div class="max-w-6xl mx-auto px-4">
      <div class="grid lg:grid-cols-3 gap-8">
        
        {/* === LEFT COLUMN: MAIN PROFILE === */}
        <div class="lg:col-span-2 space-y-8">
          
          {/* 1. HEADER CARD */}
          <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
            <div class="p-6 md:p-8 flex flex-col md:flex-row gap-6 items-start">
               {/* Profile Image */}
               <div class="shrink-0">
                 <img 
                    src={doctor.image} 
                    alt={doctor.name} 
                    class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-slate-50 shadow-md object-cover"
                    onError="this.src='https://placehold.co/400?text=Dr'" 
                  />
               </div>

               {/* Name & Identity */}
               <div class="flex-1 min-w-0">
                  <div class="flex flex-wrap items-center gap-2 mb-2">
                    <span class="px-3 py-1 bg-blue-50 text-[#276CA1] text-xs font-bold uppercase tracking-wider rounded-full">
                      {doctor.specialty}
                    </span>
                  </div>
                  
                  <h1 class="font-serif text-3xl text-slate-900 font-bold mb-3 leading-tight">
                    {doctor.name}
                  </h1>

                  <div class="flex flex-col gap-2 text-slate-600 text-sm mb-6">
                    <div class="flex items-center gap-2">
                       <MapPin className="w-4 h-4 text-slate-400 shrink-0" />
                       <span class="font-medium">{doctor.hospital}</span>
                    </div>
                    <div class="flex items-center gap-2">
                       <Globe className="w-4 h-4 text-slate-400 shrink-0" />
                       <span>{languages.join(', ')}</span>
                    </div>
                  </div>

                  {/* Mobile CTA (Hidden on Desktop) */}
                  <div class="md:hidden">
                    <a href={waLink} target="_blank" class="block w-full text-center px-6 py-3 bg-[#276CA1] text-white font-bold rounded-xl shadow-lg shadow-blue-900/10">
                      Book Appointment
                    </a>
                  </div>
               </div>
            </div>
          </div>

          {/* 2. ABOUT & BIO SECTION */}
          <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 md:p-8">
            <h3 class="font-serif text-xl text-slate-900 font-bold mb-4 flex items-center gap-2">
              <CheckCircle className="w-5 h-5 text-[#276CA1]" />
              About the Specialist
            </h3>
            <div class="prose prose-slate max-w-none text-slate-600 leading-relaxed">
              <p className="whitespace-pre-line">{doctor.bio || "No biography available."}</p>
            </div>
          </div>

          {/* 3. MEDICAL BACKGROUND (Experience Field) */}
          {doctor.experience && (
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 md:p-8">
              <h3 class="font-serif text-xl text-slate-900 font-bold mb-4 flex items-center gap-2">
                <Award className="w-5 h-5 text-[#276CA1]" />
                Medical Background & Credentials
              </h3>
              <div class="bg-slate-50 rounded-xl p-6 border border-slate-100">
                {/* We use whitespace-pre-line to respect the formatting from the sheet */}
                <p class="text-slate-700 text-sm leading-7 whitespace-pre-line font-medium">
                  {doctor.experience}
                </p>
              </div>
            </div>
          )}

        </div>

        {/* === RIGHT COLUMN: SIDEBAR (Sticky) === */}
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            
            {/* CTA CARD (Desktop) */}
            <div class="hidden md:block bg-white rounded-2xl shadow-lg border border-slate-100 p-6 text-center">
              <h3 class="font-serif text-lg text-slate-900 mb-2">Ready to consult?</h3>
              <p class="text-slate-500 text-sm mb-6">Book a slot with {doctor.name} easily via WhatsApp.</p>
              <a href={waLink} target="_blank" class="block w-full px-6 py-4 bg-[#276CA1] hover:bg-[#1f5682] text-white font-bold rounded-xl transition-all shadow-md">
                Book Appointment
              </a>
            </div>

            {/* SCHEDULE CARD */}
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
               <div class="p-4 bg-slate-50 border-b border-slate-100 flex items-center gap-2">
                  <Calendar className="w-5 h-5 text-[#276CA1]" />
                  <span class="font-bold text-slate-900">Clinic Schedule</span>
               </div>
               <div class="p-4 space-y-3">
                  {schedule && schedule.length > 0 ? schedule.map((slot, index) => (
                    <div key={index} class="flex items-center justify-between p-3 bg-white border border-slate-100 rounded-lg hover:border-blue-100 transition-colors">
                        <div class="flex flex-col">
                           <span class="font-bold text-slate-900 text-sm">{slot.day}</span>
                           <div class="flex items-center gap-1 text-xs text-slate-500 mt-1">
                              <Clock className="w-3 h-3" />
                              {slot.time}
                           </div>
                        </div>
                        <span class="text-[10px] bg-green-50 text-green-700 px-2 py-1 rounded-full font-bold uppercase tracking-wide border border-green-100">
                            {slot.type || 'Consultation'}
                        </span>
                    </div>
                  )) : (
                    <div class="text-center py-6">
                       <Stethoscope className="w-8 h-8 text-slate-300 mx-auto mb-2" />
                       <p class="text-slate-400 italic text-sm">Schedule available upon request.</p>
                    </div>
                  )}
               </div>
               <div class="p-4 bg-slate-50 border-t border-slate-100 text-center">
                  <p class="text-xs text-slate-400">Times are subject to change.</p>
               </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</Layout>